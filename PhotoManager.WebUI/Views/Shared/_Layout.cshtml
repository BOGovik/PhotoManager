<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    @* Menu *@
    <div class="bg-dark collapse sticky-top" id="navbarHeader" style="top:50px">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-md-7 py-4">
                    <p class="text-muted">
                        Manage your photo collection with PhotoManager. PhotoManager is open photo gallery software for the web. Designed for organisations, teams and individuals.
                    </p>
                    @Html.Partial("_LoginPartial")
                </div>
                <div class="col-sm-4 offset-md-1 py-4">
                    <h4 class="text-white">Contact</h4>
                    <ul class="list-unstyled">
                        <li><a href="https://www.facebook.com/profile.php?id=100006391335016" class="text-white">Like on Facebook</a></li>
                        <li><a href="mailto:bogovoyart@gmail.com" class="text-white">Email me</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="navbar navbar-dark bg-dark shadow-sm fixed-top">
        <div class="container d-flex justify-content-between">
            <div class="navbar-brand d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="mr-2" viewBox="0 0 24 24" focusable="false"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg>
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink("Manager photo", "List", "Photo", null, new { @class = "breadcrumb-item active", style = "text-decoration: none" })
                }
                else
                {
                    @Html.ActionLink("Manager photo", "Index", "Home", null, new { @class = "breadcrumb-item active", style = "text-decoration: none" })
                }
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">

                <a class="nav-link disabled" href="#"> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </div>
    <br />

    @* Body *@
    @if (Request.IsAuthenticated)
    {
        <div class="row panel">
            <div class="col-md-1">

            </div>
            <div id="categories" class="col-md-1">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-md-8">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">@TempData["message"]</div>
                }
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div class="container body-content">
            @RenderBody()
        </div>
    }

    @* Footer *@
    <div>
        <footer class="container">
            <p class="float-right">
                <a href="#"><img src="~/img/BackToTop.png" width="50" height="50" border="0" title="Scroll to top" alt="Scroll to top"></a>
            </p>
            <p>© 2018-2020 Bogovoy, Inc. </p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)




</body>
</html>
