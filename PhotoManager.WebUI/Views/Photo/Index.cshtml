@model IEnumerable<PhotoManager.Domain.Entities.Photo>

@{
    ViewBag.Title = "All photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>List of all photos</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Name</th>
                    <th class="text-right">Description</th>
                    <th class="text-center">Actions</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">@item.PhotoId</td>
                        <td>@Html.ActionLink(item.Name, "Edit", new { item.PhotoId })</td>
                        <td class="text-right">@item.Description</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("GameId", item.PhotoId)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Добавить фото", "Create", null,
                new { @class = "btn btn-default" })
        </div>
    </div>